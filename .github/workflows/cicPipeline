name: cicPipeline

on:
  push:
    branches: 
      - main

  pull_request:
    branches: 
      - main

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'

    - name: Install Dependencies
      run: npm install

    - name: Lint Code
      run: npx eslint .

    - name: Run Unit Tests
      run: npm test

